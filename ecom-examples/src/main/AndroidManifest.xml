<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wirecard.ecom.examples">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".KotlinStartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".CardFieldActivity"
            android:label="@string/title_activity_card_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".AnimatedCardFieldActivity"
            android:label="@string/title_activity_animated_card_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".KotlinCardFieldActivity"
            android:label="@string/title_activity_card_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".KotlinCardFieldFragmentImplActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".KotlinAnimatedCardFieldActivity"
            android:label="@string/title_activity_card_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".TokenAnimatedCardFieldActivity"
            android:label="@string/title_activity_card_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".KotlinTokenAnimatedCardFieldActivity"
            android:label="@string/title_activity_card_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".GooglePayActivity"
            android:label="GooglePayActivity"
            android:theme="@style/WdEcomTheme.Transparent"></activity>
        <activity
            android:name=".KotlinLoyaltyCardFieldActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>